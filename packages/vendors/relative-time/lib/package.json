{
  "name": "@app/relative-time",
  "version": "0.6.0",
  "private": false,
  "license": "Apache-2.0",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "scripts": {
    "depenence.update": "ncu -u",
    "rm.assets": "rm -rf @types",
    "ready.assets": "run-s  ready:*",
    "ready:definitive": "cpx \"../../../globalLibrary/appDefinitive/@types/**/*.*\" ./@types",
    "ready:copy_static": "cpx \"../../../appWeb/static/**/*.*\" ./static",
    "test.lib.pending": "jest --config jest.config.js --env=node --colors --coverage test",
    "test.current.pending": "yarn test.lib",
    "fix": "prettier --no-semi --single-quote --write '**/*.ts{,x}'",
    "build:reset": "rm -rf build",
    "build.clean": "yarn build:reset",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.lib.json",
    "build:js": "babel src --out-dir build/lib --extensions \".ts,.tsx\" --ignore \"**/__tests__\" --source-maps inline",
    "build:all": "npm run build:types && npm run build:js",
    "build-lib": "yarn build.clean && yarn build:all",
    "build.current.pending": "yarn build-lib",
    "postinstall": "yarn build-lib"
  },
  "dependencies": {
    "@app/intl": "*",
    "@app/tools": "*",
    "@types/numeral": "0.0.25",
    "@types/react": "16.4.8"
  },
  "devDependencies": {
    "@app/mocks": "*",
    "@types/sinon": "5.0.2",
    "sinon": "6.1.5",
    "@types/node": "11.10.4",
    "babel-plugin-module-resolver": "3.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "24.1.0",
    "@types/jest": "24.0.6",
    "jest": "24.1.0",
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "@babel/runtime-corejs2": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@types/react-test-renderer": "16.0.3",
    "react-test-renderer": "16.7.0",
    "typescript": "3.3.3"
  }
}