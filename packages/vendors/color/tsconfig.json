{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    // enables absolute path imports
    "paths": {},
    "outDir": "build/lib",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "target": "esnext",
    "module": "commonjs",
    // enable JSX mode, but "preserve" tells TypeScript to not transform it (we'll use Babel)
    "jsx": "preserve",
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "exclude": [
    "interfaces",
    "src/interfaces",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.test.ts",
    "config",
    "dist"
  ]
}