{
  "name": "@app/nb-demo-shared-components",
  "version": "0.6.0",
  "license": "MIT",
  "repository": "/@app/shared-components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "depenence.update": "ncu -u",
    "rm.assets": "rm -rf @types",
    "ready.assets": "run-s  ready:*",
    "ready:assets": "cpx \"../demo-NativeBase-expo/assets/**/*.*\" ./assets",
    "ready:definitive": "cpx \"../../globalLibrary/appDefinitive/@types/**/*.*\" ./@types",
    "fix": "prettier --no-semi --single-quote --write '**/*.ts{,x}'",
    "fix.current": "yarn fix",
    "test.lib.pending": "jest --env=node --colors --coverage test",
    "test.current.pending": "yarn test.lib",
    "build:reset": "rm -rf build",
    "build.clean": "yarn build:reset",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.lib.json",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --ignore \"**/__tests__\" --source-maps inline",
    "build:all": "npm run build:types && npm run build:js",
    "build-lib": "yarn build.clean && yarn build:all",
    "build.current": "yarn build-lib",
    "postinstall": "yarn build-lib"
  },
  "dependencies": {
    "react-primitives": "*",
    "@app/types": "*",
    "@app/tools": "*",
    "@app/native-base": "*",
    "@types/react-native": "0.57.27",
    "@types/react": "16.4.8",
    "@types/react-dom": "16.0.11",
    "react": "16.5.0",
    "react-dom": "^16.8.2",
    "react-art": "16.5.2",
    "react-native-web": "0.10.0"
  },
  "peerDependencies": {
    "prop-types": "*",
    "react": "*",
    "react-dom": "*",
    "react-native": "*",
    "react-native-web": "*"
  },
  "devDependencies": {
    "@app/mocks": "*",
    "@types/node": "11.10.4",
    "babel-plugin-module-resolver": "3.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "24.1.0",
    "@types/jest": "24.0.6",
    "jest": "24.1.0",
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "@babel/runtime-corejs2": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@types/react-test-renderer": "16.0.3",
    "react-test-renderer": "16.7.0",
    "typescript": "3.3.3",
    "@types/react-sketchapp": "0.12.1",
    "react-sketchapp": "2.0.0"
  }
}
