{
    "name": "native-base-shoutem-theme",
    "version": "0.2.2",
    "license": "MIT",
    "main": "./src/index.ts",
    "types": "dist/__types__/index.d.ts",
    "scripts": {
        "depenence.update": "ncu -u",
        "rm.assets": "rm -rf @types",
        "ready.assets": "run-s  ready:*",
        "ready:definitive": "cpx \"../../globalLibrary/appDefinitive/@types/**/*.*\" ./@types",
        "fix": "prettier --no-semi --single-quote --write '**/*.ts{,x}'",
        "fix.current.pending": "yarn fix",
        "test.lib.pending": "jest --env=node --colors --coverage test",
        "test.current.pending": "yarn test.lib",
        "build:reset": "rm -rf dist",
        "build:clean": "yarn build:reset",
        "build:types": "rm -rf dist/__types__ && tsc --emitDeclarationOnly -p tsconfig.lib.json",
        "build:js": "babel --config-file ../../../../babel.config.js src --out-dir dist --extensions \".ts,.tsx\" --ignore \"**/__tests__\" --source-maps inline",
        "build:all": "yarn build:types && yarn build:js",
        "build-lib": "yarn build:clean && yarn build:all",
        "postinstall.pending": "yarn build-lib",
        "build.current.pending": "yarn build:js"
    },
    "dependencies": {
        "@types/hoist-non-react-statics": "3.0.1",
        "hoist-non-react-statics": "3.2.1",
        "@types/react": "16.4.8",
        "react": "16.5.0",
        "@types/react-dom": "16.0.11",
        "react-dom": "^16.8.2"
    },
    "peerDependencies": {
        "prop-types": "*",
        "react": "*",
        "react-dom": "*"
    },
    "devDependencies": {
        "react-sketchapp": "2.0.0",
        "@types/node": "11.10.4",
        "@babel/plugin-proposal-decorators": "7.4.0",
        "babel-plugin-module-resolver": "3.2.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "24.1.0",
        "@types/jest": "24.0.6",
        "jest": "24.1.0",
        "@babel/cli": "7.4.3",
        "@babel/core": "7.4.3",
        "@babel/runtime": "7.4.3",
        "@babel/polyfill": "7.4.3",
        "@babel/preset-env": "7.4.3",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "7.3.3",
        "@babel/plugin-transform-runtime": "7.4.3",
        "@babel/plugin-proposal-class-properties": "7.4.0",
        "@babel/plugin-proposal-object-rest-spread": "7.4.3",
        "@types/react-test-renderer": "16.8.1",
        "react-test-renderer": "16.7.0"
    }
}