{
    "name": "sketch_nativebase_demo",
    "version": "2.0.0",
    "license": "MIT",
    "skpm": {
        "main": "nativebase.sketchplugin",
        "manifest": "./manifest.json"
    },
    "scripts": {
        "rm.assets": "rm -rf @types",
        "fix": "prettier --no-semi --single-quote --write '**/*.ts{,x}'",
        "fix.current.pending": "yarn fix",
        "ready.assets.pending": "run-s  ready:*",
        "build": "yarn typescript:once && skpm-build",
        "watch": "skpm-build --watch & yarn typescript",
        "render": "skpm-build --watch --run & yarn typescript",
        "render:once": "yarn typescript:once && skpm-build --run",
        "render:watch": "skpm-build --watch --run",
        "render:all.now": "yarn render:once",
        "build:all": "yarn build && skpm-link",
        "post-install": "yarn build:all",
        "typescript.last": "tsc --watch",
        "typescript": "echo 'typescript watch'",
        "typescript:once": "tsc",
        "build:js": "yarn typescript:once",
        "typescript:clean": "rm -rf ./.ts-compiled",
        "build.current.pending": "yarn build:all"
    },
    "dependencies": {
        "react-primitives": "*",
        "@app/react-sketch-vector-icons": "*",
        "@app/tools": "*",
        "@app/native-base": "*",
        "@app/nb-demo-universal-components": "*",
        "@sentry/browser": "4.6.4",
        "@types/react-dom": "16.0.11",
        "react-dom": "16.7.0",
        "@types/prop-types": "15.5.8",
        "prop-types": "15.6.2",
        "@types/react-native": "0.57.27",
        "react-native": "0.57.1",
        "@types/react": "16.4.8",
        "react": "16.5.0",
        "react-native-web": "0.10.0",
        "react-sketchapp": "^3.0.0-beta.3",
        "@skpm/builder": "0.4.0"
    },
    "devDependencies": {
        "@types/enzyme": "3.1.15",
        "@types/enzyme-adapter-react-16": "1.0.3",
        "@types/redux-mock-store": "1.0.0",
        "@types/sinon": "7.0.3",
        "enzyme": "3.8.0",
        "enzyme-adapter-react-16": "1.7.1",
        "enzyme-to-json": "3.3.5",
        "iana-tz-data": ">=2017.1.0",
        "jest-enzyme": "7.0.1",
        "jest-expo": "32.0.0",
        "jest-react-native": "18.0.0",
        "npm-run-all": "4.1.5",
        "react-addons-shallow-compare": "15.6.2",
        "react-addons-test-utils": "15.6.2",
        "react-native-debugger-open": "0.3.17",
        "sinon": "7.2.2"
    }
}