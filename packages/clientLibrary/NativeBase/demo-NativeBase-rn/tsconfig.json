{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {},
    "strict": true,
    "noImplicitAny": false,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2016",
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "exclude": [
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules"
  ]
}