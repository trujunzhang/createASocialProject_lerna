{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "*.ios",
        "*.android",
        "*.web"
      ]
    },
    "jsx": "react",
    "module": "commonjs",
    "strict": true,
    "target": "es2017",
    "noImplicitAny": false,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "noEmitHelpers": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": false,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*"
  ]
}