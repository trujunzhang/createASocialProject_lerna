  "repository": "/@app/universal-components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "rm.assets": "rm -rf @types",
    "ready.assets": "run-s  ready:*",
    "ready:definitive": "cpx \"../../globalLibrary/appDefinitive/@types/**/*.*\" ./@types",
    "fix": "prettier --no-semi --single-quote --write '**/*.ts{,x}'",
    "fix.current.pending": "yarn fix",
    "test.lib": "jest --env=node --colors --coverage test",
    "test.current.pending": "yarn test.lib",
    "build:reset": "rm -rf dist",
    "build.clean": "yarn build:reset",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.lib.json",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --ignore \"**/__tests__\" --source-maps inline",
    "build:all": "npm run build:types && npm run build:js",
    "build-lib": "yarn build.clean && yarn build:all",
    "build.current.pending": "yarn build-lib",
    "postinstall": "yarn build-lib"
  },
  "dependencies": {
    "@app/nativebase-theme-components": "*",
    "@app/native-base": "*",
    "@app/native-base-variables": "*",
    "@app/types": "*"
  },
  "peerDependencies": {
    "prop-types": "*",
    "react": "*",
    "react-native": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@app/mocks": "*",
    "@types/react-sketchapp": "0.12.1",
    "react-sketchapp": "2.0.0",
    "@types/node": "11.10.4",
    "babel-plugin-module-resolver": "3.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "24.1.0",
    "@types/jest": "24.0.6",
    "jest": "24.1.0",
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/runtime": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime-corejs2": "^7.1.2",
    "@babel/preset-env": "^7.1.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.1.2",
    "@types/react-test-renderer": "16.0.3",
    "react-test-renderer": "16.7.0",
    "typescript": "3.3.3",
    "@types/react": "16.4.8",
    "@types/react-native": "0.57.27",
    "react": "16.5.0"
  }
